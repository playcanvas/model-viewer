{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowJs": true,
        "target": "es6",
        "jsx": "react",
        "lib": [
            "es2019",
            "dom"
        ],
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop" : true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "pcui": ["node_modules/@playcanvas/pcui/react"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
