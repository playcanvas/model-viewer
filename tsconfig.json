{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowJs": true,
        "target": "es6",
        "jsx": "react",
        "lib": [
            "es2019",
            "dom"
        ],
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop" : true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
