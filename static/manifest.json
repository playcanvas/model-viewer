{
    "name": "Model Viewer",
    "short_name": "Model Viewer",
    "description": "Fast and lightweight glTF 2.0 and gaussian splat PLY viewer.",
    "display": "fullscreen",
    "start_url": "/",
    "scope": "/",
    "background_color": "black",
    "icons": [{
        "src": "playcanvas-logo.png",
        "sizes": "64x64",
        "type": "image/png"
    }],
    "file_handlers": [{
        "action": "/",
        "accept": {
            "application/ply": [".ply"],
            "model/gltf-binary": [".glb"]
        }
    }]
}
