{
    "name": "Model Viewer",
    "short_name": "Model Viewer",
    "description": "Fast and lightweight glTF 2.0 and gaussian splat PLY viewer.",
    "display": "fullscreen",
    "start_url": "/viewer/",
    "scope": "/viewer/",
    "background_color": "black",
    "categories": ["productivity", "utilities"],
    "icons": [{
        "src": "playcanvas-logo.png",
        "sizes": "64x64",
        "type": "image/png"
    }],
    "file_handlers": [
        {
            "action": "/viewer/",
            "accept": {
                "application/ply": [".ply"],
                "model/gltf-binary": [".glb"]
            }
        }
    ]
}
